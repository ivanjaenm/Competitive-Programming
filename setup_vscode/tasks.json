{
    "version": "2.0.0",
    "windows": {
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["-c"]
        }
      }
    },
    "tasks": [      
      {
        "label": "build on WSL",
        "type": "shell",
        "command": "g++",
        "args": [
          "-static",
          "-DONLINE_JUDGE",
          "-lm",
          "-s",
          "-O2",
          "-std=c++11",
          "-Wall",
          "-g",
          "${fileBasename}",
          "-o",
          "${fileBasenameNoExtension}.out"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "build on WSL (with debug info)",
        "type": "shell",
        "command": "g++",
        "args": [
          "-static",
          "-DONLINE_JUDGE",
          "-lm",
          "-O2",
          "-std=c++11",
          "-Wall",
          "-g",
          "${fileBasename}",
          "-o",
          "${fileBasenameNoExtension}.out"
        ],
        "group": "build"
      },
      {
        "label": "run on WSL",
        "type": "shell",
        "command": "./${fileBasenameNoExtension}.out",
        "args": [
          "<",
          "${fileBasenameNoExtension}_input.txt",
          ">",
          "${fileBasenameNoExtension}_output.txt"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      }
    ]
  }